/dts-v1/;
#include <st/f4/stm32f405Xg.dtsi>
#include <st/f4/stm32f405rgtx-pinctrl.dtsi>
#include <dt-bindings/led/led.h>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	model = "HelloWord HW-75 Dynamic";
	compatible = "st,stm32f405";

	chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,ccm = &ccm0;
		zephyr,console = &cdc_acm_uart0;
		zephyr,display = &oled;
		zmk,kscan = &kscan;
		zmk,underglow = &led_strip;
	};

	kscan: kscan {
		compatible = "zmk,kscan-gpio-direct";
		label = "KSCAN";
		input-gpios =
			<&gpioc 8 GPIO_ACTIVE_LOW>,
			<&gpioc 9 GPIO_ACTIVE_LOW>;
	};

	sensors {
		compatible = "zmk,keymap-sensors";
		sensors = <&knob>;
	};

	knob: knob {
		compatible = "zmk,knob";
		label = "KNOB";
		encoder = <&as5047>;
		tick-interval-us = <1000>;
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	div-m = <4>;
	mul-n = <168>;
	div-p = <2>;
	div-q = <7>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(168)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <4>;
	apb2-prescaler = <2>;
};

&usbotg_fs {
	pinctrl-0 = <&usb_otg_fs_dm_pa11 &usb_otg_fs_dp_pa12>;
	pinctrl-names = "default";
	status = "okay";

	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
		label = "CDC_ACM_0";
	};
};

&spi1 {
	pinctrl-0 = <&spi1_miso_pb4 &spi1_mosi_pb5 &spi1_sck_pb3>;
	pinctrl-names = "default";
	status = "okay";

	cs-gpios = <&gpiod 2 GPIO_ACTIVE_LOW>;

	as5047: as5047@0 {
		compatible = "ams,as5047";
		label = "AS5047";

		reg = <0>;
		spi-max-frequency = <1000000>;

		cs-delay-us = <350>;
		init-delay-us = <10000>;
	};
};

&spi3 {
	pinctrl-0 = <&spi3_mosi_pc12>;
	pinctrl-names = "default";
	status = "okay";

	led_strip: ws2812@0 {
		compatible = "worldsemi,ws2812-spi";
		label = "WS2812";

		reg = <0>;
		spi-max-frequency = <4000000>;

		chain-length = <4>;
		spi-one-frame = <0x70>;
		spi-zero-frame = <0x40>;
		color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
	};
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	status = "okay";

	clock-frequency = <100000>;

	oled: ssd1306@3c {
		compatible = "solomon,ssd1306fb";
		label = "SSD1306";

		reg = <0x3C>;

		width = <128>;
		height = <32>;

		segment-offset = <2>;
		page-offset = <0>;
		display-offset = <16>;
		multiplex-ratio = <31>;
		segment-remap;
		com-invdir;
		prechargep = <0xf1>;
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		code_partition: partition@0 {
			label = "code_partition";
			reg = <0x00000000 DT_SIZE_K(256)>;
		};

		storage_partition: partition@e0000 {
			label = "storage";
			reg = <0x000e0000 DT_SIZE_K(128)>;
		};
	};
};
